#!/bin/sh
# Shell script to start Vim with less.vim.
# Read stdin if no arguments were given.

program=${0##*/}
if [ $# -eq 0 ]; then
    if [ ! -t 0 ]; then
        set -- -
    fi
fi
case $program in
        *less) vim=${program%less} ;;
        *    ) vim=vim ;;
esac
if [ -t 1 ]; then
    exec $vim -R --noplugin \
        --cmd 'let no_plugin_maps = 1' \
        -c 'runtime plugin/less.vim' \
        -c 'runtime macros/less.vim' \
        +1 "$@"
else
    exec cat "$@"
fi

# vim: ft=sh et sw=4 sts=4
